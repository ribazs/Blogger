<% include ./partials/header %>
  <div class="row">
    <div class="col s6 offset-s3">
      <div class="box">
        <div class="card-panel teal lighten-4 z-depth-3">
          <h2 class="center">New Blog</h2>
          <form action="/blogs" method="POST">
            <div class="input-field">
              <input id="name" type="text" name="blog[title]">
              <label for="name">Blog Title</label>
            </div>
            <div class="input-field">
              <input type="text" name="blog[image]">
              <label for="name">Image</label>
            </div>
            <div class="input-field">
              <textarea name="blog[body]" class="materialize-textarea"></textarea>
              <label for="name">Blog Content</label>
            </div>
            <div class="input-field">
              <input type="submit" class="btn">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <% include ./partials/footer %>