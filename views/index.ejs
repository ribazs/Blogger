  <div class="row">
    <div class="col s9">
      <!-- HORIZONTAL CARD -->
      <% blogs.forEach(function(blog){ %>
        <div class="card horizontal index1 hoverable">
          <div class="card-image">
            <img class="responsive-img" src="<%=blog.image %>">
          </div>
          <div class="card-stacked">
            <div class="card-content">
              <span class="card-title teal-text darken-4">
                <%=blog.title%>
              </span>
              <p>
                <%= blog.body.substring(0, 400) %> ...</p>
              <a class="bottom" href='/blogs/<%= blog._id %>'>Read More</a>
            </div>
          </div>
        </div>
        <% }) %>
    </div>
    <div class="col s3 index2">
